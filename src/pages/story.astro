---
import BaseLayout from '../layouts/BaseLayout.astro'
const allPosts = await Astro.glob('./posts/*.md');
const pageTitle = "My Astro Learning Blog";
---
<BaseLayout title={pageTitle}>
  <h1 class="text-2xl  text-center mt-7">Counsellors Stories</h3>

  <section>
    <div class="">
      {allPosts.map((post) => (
        <a href={post.url} class="flex rounded-md border h-24 md:h-28 w-full max-w-lg mx-auto overflow-x-hidden mt-3 border-primary group transition-all duration-300 hover:-translate-y-2 cursor-pointer">
          <img class="h-full aspect-square sm:aspect-video object-cover group-hover:opacity-80 transition-all duration-300" src={post.frontmatter.image.url}  alt="">
          <div class="flex items-center p-2">
            <div>
              <h3 class="text-xl font-bold">{post.frontmatter.title}</h3>
              <p class="text-gray-500 dark:text-gray-400">{post.frontmatter.description}</p>  
            </div>
          </div>
        </a>
        ))}
    </div>
  </section>
</BaseLayout>